#include <gtk/gtk.h>

static void activate (GtkApplication* app, gpointer user_data) {
  GtkWidget *window;
  GtkWidget *grid;
  GtkWidget *plot_area;
  
  window = gtk_application_window_new (app);
  gtk_window_set_title (GTK_WINDOW (window), "Visualizador de datos");
  gtk_window_set_default_size (GTK_WINDOW (window), 750, 500);

  grid = gtk_grid_new ();

  gtk_container_add (GTK_CONTAINER (window), grid);

  plot_area = gtk_drawing_area_new ();

  gtk_grid_attach(GTK_GRID(grid), plot_area, 0, 0, 1, 1);
  
  //gtk_container_set_border_width (GTK_CONTAINER (window), 100);
  //gtk_window_maximize(GTK_WINDOW (window));
  
  gtk_widget_show_all (window);
}

int main (int argc, char **argv) {
  GtkApplication *app;
  int status;

  app = gtk_application_new ("org.gtk.DataVisualization", G_APPLICATION_FLAGS_NONE);
  g_signal_connect (app, "activate", G_CALLBACK (activate), NULL);
  status = g_application_run (G_APPLICATION (app), argc, argv);
  g_object_unref (app);

  return status;
}
